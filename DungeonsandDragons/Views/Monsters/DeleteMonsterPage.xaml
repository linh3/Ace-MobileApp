<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DungeonsandDragons.DeleteMonsterPage" Title="{Binding Title}">

    <ContentPage.ToolbarItems>    
    <ToolbarItem Text="Delete" Clicked="Delete_Clicked" />        
    <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />    
    </ContentPage.ToolbarItems>
    <ScrollView Orientation="Vertical" VerticalOptions="StartAndExpand">
    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Monster.Name}" FontSize="Medium" />
        <Label Text="{Binding Monster.ImageLink}" FontSize="Small" />
        <Label Text="Level:" FontSize="Small" />
        <Label Text="{Binding Monster.Level}" FontSize="Small" />
        <Label Text="Strength:" FontSize="Small" />
        <Label Text="{Binding Monster.Strength}" FontSize="Small" />
        <Label Text="Defense:" FontSize="Small" />
        <Label Text="{Binding Monster.Defense}" FontSize="Small" />
        <Label Text="Speed:" FontSize="Small" />
        <Label Text="{Binding Monster.Speed}" FontSize="Small"  />
    </StackLayout>
        </ScrollView>
</ContentPage>
