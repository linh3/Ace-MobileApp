<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DungeonsandDragons.DeleteScorePage" BackgroundImage="background2in.jpg" Title="{Binding Title}">

    <ContentPage.ToolbarItems>    
    <ToolbarItem Text="Delete" Clicked="Delete_Clicked" />        
    <ToolbarItem Text="Cancel" Clicked="Cancel_Clicked" />    
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="20" Padding="15">
        <Label Text="{Binding Score.Name}" FontSize="Medium" />
        <Label Text="{Binding Score.ScoreTotal}" FontSize="Small" />
    </StackLayout>
</ContentPage>
